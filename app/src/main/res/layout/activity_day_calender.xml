<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb2"
    tools:context=".DayCalender">


    <TextView
        android:id="@+id/monthDayText"
        android:layout_width="231dp"
        android:layout_height="37dp"
        android:layout_marginTop="44dp"
        android:layout_weight="2"
        android:text="Maj 2022"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/nextDay"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toEndOf="@+id/previousDay"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/previousDay"
        android:layout_width="66dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_weight="1"
        android:background="@drawable/arrow_button"
        android:text="@string/previous"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageButton
        android:id="@+id/nextDay"
        android:layout_width="67dp"
        android:layout_height="38dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="@drawable/arrow_button"
        android:text="@string/previous"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/next" />


    <TextView
        android:id="@+id/dayOfWeekTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Monday"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthDayText" />

    <ListView

        android:id="@+id/hourListView"
        android:layout_width="359dp"
        android:layout_height="502dp"
        android:layout_marginTop="44dp"
        android:layout_weight="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayOfWeekTV">


    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/blue"
        android:clickable="true"
        android:onClick="makeVisability"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/home_yellow" />

    <LinearLayout

        android:id="@+id/menu"
        android:layout_width="115dp"
        android:layout_height="77dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/arrow_button"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/home"
        app:layout_constraintEnd_toEndOf="parent">


        <Button
            android:id="@+id/weekly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="tygodniowy"
            android:textColor="@color/Yellow"
            android:textStyle="italic" />

        <Button
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="miesiÄ™czny"
            android:textColor="@color/Yellow"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="71dp"
        android:layout_height="66dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/bnt_bg"
        android:elegantTextHeight="false"
        android:onClick="newEventAction"
        android:text="+"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textDirection="locale"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextDay" />
</androidx.constraintlayout.widget.ConstraintLayout>